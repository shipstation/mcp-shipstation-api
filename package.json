{
  "name": "shipstation-api-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for interacting with ShipStation API v2",
  "main": "src/mcp-server.js",
  "type": "module",
  "scripts": {
    "start": "node src/mcp-server.js",
    "start-express": "node src/server.js",
    "dev": "nodemon src/mcp-server.js",
    "dev-express": "nodemon src/server.js",
    "test": "node --test tests/mcp-server-node.test.js",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "shipstation",
    "api",
    "shipping",
    "labels",
    "mcp",
    "model-context-protocol",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "jest": {
    "preset": "default",
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "__NODE_OPTIONS__": "--experimental-vm-modules"
    },
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "transform": {}
  }
}
